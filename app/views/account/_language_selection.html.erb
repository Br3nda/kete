<div id="footer_language_selection" class="footer_div">
  <% if User.language_choices.keys.size > 1 %>
    <% form_tag(:controller => 'account', :action => 'change_locale') do %>
      <div class="form-element">
        <noscript><label><%=t 'account.language_selection.language' %></label></noscript>
        <%= locale_dropdown(nil, { :default => I18n.locale, :pre_text => t('account.language_selection.choose_language') }) -%>
        <noscript><%= submit_tag t('account.language_selection.change_language') %></noscript>
      </div>
    <% end %>
  <% end %>
</div>
