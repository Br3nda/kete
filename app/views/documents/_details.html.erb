<% if !item.file_private? || current_user_can_see_private_files_for?(item) -%>
  <p>Filename: <%= item.filename %> ( <%= link_to_original_of item -%> )</p>
  <p>Size: <%= number_to_human_size(item.size) %></p>
  <p>Document type: <%= item.content_type %> ( <%= link_to("replace description with document text",
                                                           :action => 'convert', :id => item,
                                                           :private => params[:private]) if ok_to_convert_to_description?(item) %> )</p>
<% else -%>
  <p>Filename: ( not available for download )</p>
<% end -%>
