<% if !item.file_private? || current_user_can_see_private_files_for?(item) -%>
	<p>Filename: <%= item.filename %> (<%= link_to_original_of item, 'listen' -%>)</p>
	<p>Size: <%= number_to_human_size(item.size) %></p>
	<p>Recording type: <%= item.content_type %></p>
<% else -%>
	<p>Filename: <%= item.filename %> ( not available for download )</p>
<% end -%>
