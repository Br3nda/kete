<h2>Editing audio recording</h2>

<% form_form :audio_recording,
             :url => { :action => 'update',
                       :id => @audio_recording },
             :html => { :multipart => true } do |form| %>
  <%= render :partial => 'form' %>
  <%= submit_tag 'Edit' %>
<% end %>

<%= link_to 'Show', :action => 'show', :id => @audio_recording %> |
<%= link_to 'Cancel', :action => 'list' %>
